<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    android:orientation="vertical"
    tools:context="com.ezyserv.SignUpSelection">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_label"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ptsans_bold"
            android:text="Sign Up as"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20" />

        <TextView
            android:id="@+id/first_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_35"
            android:fontFamily="@font/ptsans_regular"
            android:text="To continue, please"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_label"
            android:layout_marginBottom="@dimen/dim_15"
            android:paddingLeft="@dimen/dim_25"
            android:paddingRight="@dimen/dim_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_sign_up_cust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_pink"
                    android:gravity="center"
                    android:text="Customer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:layout_marginTop="@dimen/dim_10"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="OR"
                    android:textSize="@dimen/dim_15" />

                <Button
                    android:id="@+id/btn_sign_up_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue"
                    android:gravity="center"
                    android:text="Service Provider"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_15" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bg_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dim_10"
            android:fontFamily="@font/ptsans_regular"
            android:text="You can switch between the two \n      from your profile later also" />

        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg" />
    </RelativeLayout>

</LinearLayout>
