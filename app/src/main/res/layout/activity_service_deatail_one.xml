<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ezyserv.ServiceDeatailActivityOne">

    <include layout="@layout/detail_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dim_25"
                android:layout_marginTop="@dimen/dim_15"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dim_15"
                android:paddingRight="@dimen/dim_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_10"
                    android:text="Please fill the following details to complete\n                   your registration "
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_15"
                    android:text="SKIP NOW"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/dim_15"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"

                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/edt_service_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/shape"
                        android:hint="Name of the person company is under"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/blue" />


                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:theme="@style/MyTextInputLayout">

                        <EditText
                            android:id="@+id/edt_service_detail_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Email"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/blue" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/verify_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="VERIFY EMAIL"
                        android:textColor="@color/pink" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:contentColor="@color/black"
                        app:countryPreference="country"
                        app:keyboardAutoPopOnSearch="false"
                        app:selectionDialogShowSearch="false"
                        app:textSize="@dimen/dim_15" />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ccp"
                        android:theme="@style/MyTextInputLayout">

                        <EditText
                            android:id="@+id/edt_service_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/shape"
                            android:hint="Phone Number"
                            android:imeOptions="actionUnspecified"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/blue" />


                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/edt_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/shape"
                        android:hint="Compnay Name"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/blue" />


                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/edt_doc_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="@dimen/dim_15"
                        android:text="taxcard.pdf"
                        android:textColorHint="@color/blue"
                        android:textSize="@dimen/dim_20" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="CHANGE"
                        android:textColor="@color/pink" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_below="@+id/edt_doc_one"
                        android:background="#959595" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_60"
                    android:layout_marginTop="@dimen/dim_5"
                    android:theme="@style/MyTextInputLayout">

                    <EditText
                        android:id="@+id/edt_doc_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Document 2"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="licenso.png"
                        android:textColor="#959595"
                        android:textColorHint="@color/blue"
                        android:textSize="@dimen/dim_20" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_serv_detail_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/pink"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20" />
    </RelativeLayout>

</LinearLayout>
