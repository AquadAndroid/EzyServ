<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ezyserv.ServiceSignUpActivity">
    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dim_15"
            android:paddingRight="@dimen/dim_15">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayout"
                android:layout_marginTop="@dimen/dim_10">

                <EditText
                    android:id="@+id/edt_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of the person company is under"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPersonName"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue" />


            </android.support.design.widget.TextInputLayout>

            <!--   <TextView
                   android:layout_width="wrap_content"
                   android:layout_marginTop="@dimen/dim_10"
                   android:layout_height="wrap_content"
                   android:text="Name"
                   android:id="@+id/tv_name"
                   android:visibility="visible"
                   android:layout_marginLeft="@dimen/dim_5"
                   android:textColor="@color/blue"/>

               <EditText
                   android:id="@+id/edt_customer_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="left"
                   android:hint="Name"
                   android:inputType="textPersonName"
                   android:textSize="@dimen/dim_16" />-->


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayout"
                android:layout_marginTop="@dimen/dim_5">

                <EditText
                    android:id="@+id/edt_service_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"

                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blue" />


            </android.support.design.widget.TextInputLayout>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/tv_email"
                android:layout_marginLeft="@dimen/dim_5"
                android:textColor="@color/blue"/>

            <EditText
                android:id="@+id/edt_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/dim_16"

                />-->

            <!--  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Phone"
              android:layout_gravity="center_horizontal"
              android:id="@+id/tv_phone"
              android:textColor="@color/blue"/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:contentColor="@color/black"
                    app:countryPreference="country"
                    app:keyboardAutoPopOnSearch="false"
                    app:selectionDialogShowSearch="false"
                    app:textSize="@dimen/dim_15" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:theme="@style/MyTextInputLayout"
                    android:layout_toRightOf="@+id/ccp">

                    <EditText
                        android:id="@+id/edt_service_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"

                        android:imeOptions="actionUnspecified"
                        android:inputType="number"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/blue" />


                </android.support.design.widget.TextInputLayout>
                <!--   <EditText
                       android:id="@+id/edt_customer_mb_no"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@+id/ccp"
                       android:gravity="left"
                       android:hint="Phone Number"
                       android:inputType="phone"
                       android:textSize="@dimen/dim_16" />-->
            </RelativeLayout>
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/dim_30"
                android:layout_marginRight="@dimen/dim_30"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:textSize="@dimen/dim_18" />
            <!--<Button-->
                <!--android:id="@+id/service_btn_fb"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/dim_10"-->
                <!--android:background="#3B51C0"-->
                <!--android:drawableLeft="@drawable/fb_connect"-->
                <!--android:gravity="center"-->
                <!--android:paddingLeft="@dimen/dim_15"-->
                <!--android:text="@string/fb_connect"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/dim_15" />-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_5">

                <TextView
                    android:id="@+id/login_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_15" />

                <TextView
                    android:id="@+id/service_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_toRightOf="@+id/login_label"
                    android:text="Log In"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/dim_15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_7">

                <CheckBox
                    android:id="@+id/service_signup_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="false" />

                <TextView
                    android:id="@+id/terms_condition_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/service_signup_checkbox"
                    android:text="I agree with the "
                    android:textSize="@dimen/dim_15" />

                <TextView
                    android:id="@+id/tv_term_con_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_toRightOf="@+id/terms_condition_label"
                    android:text="@string/term"
                    android:textSize="@dimen/dim_15" />
            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bg" />

        <Button
            android:id="@+id/btn_serv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/pink"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20" />
    </RelativeLayout>

</LinearLayout>
