<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_10">

        <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_added_to_wallet"

            />

        <TextView
            android:id="@+id/label_added_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_toRightOf="@+id/wallet_icon"

            android:fontFamily="@font/ptsans_regular"
            android:text="Added to wallet"
            android:textSize="@dimen/dim_15" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_added_wallet"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_toRightOf="@+id/wallet_icon"
            android:fontFamily="@font/ptsans_regular"
            android:text="From : City Bank"
            android:textSize="@dimen/dim_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_maode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_46"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="@font/ptsans_regular"
        android:text="via Net Banking"
        android:textSize="@dimen/dim_15" />

    <TextView
        android:id="@+id/tv_added_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_46"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="@font/ptsans_bold"
        android:text="+SGD(S$)200"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_18" />

    <TextView
        android:id="@+id/tv_added_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_46"
        android:layout_marginTop="@dimen/dim_5"
        android:fontFamily="@font/ptsans_regular"
        android:text="21 July 2017"
        android:textSize="@dimen/dim_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_10"
        android:background="#D8D8D8" />
</LinearLayout>