<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/dim_10"
    android:paddingLeft="@dimen/dim_10"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area &amp; Location 1"
        android:id="@+id/location_no_label"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/dim_15"
        android:textSize="@dimen/dim_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8">

        <TextView
            android:id="@+id/service_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Toa Payong"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20" />

        <TextView
            android:id="@+id/tv_remove_add_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="ADD LOCATION"
            android:textColor="@color/pink" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/tv_remove_add_location"
            android:layout_marginTop="@dimen/dim_15"
            android:background="#8A8E93" />
    </RelativeLayout>

</LinearLayout>