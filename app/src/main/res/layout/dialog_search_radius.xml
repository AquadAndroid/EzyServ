<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dim_15"
    android:paddingRight="@dimen/dim_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prog_bar"
        android:layout_marginBottom="@dimen/dim_90"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ptsans_bold"
            android:gravity="center"
            android:text="No serviceman found near you"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />

        <TextView
            android:id="@+id/label_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_8"
            android:fontFamily="@font/ptsans_regular"
            android:gravity="center"
            android:text="Try again after increasing your search radius"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prog_bar"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dim_7"
        android:fontFamily="@font/ptsans_regular"
        android:text="5 miles"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prog_bar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dim_7"
        android:fontFamily="@font/ptsans_regular"
        android:text="50 miles"
        android:textColor="@color/white" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/prog_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="@color/pink"
        app:dsb_max="50"
        app:dsb_min="5"
        app:dsb_progressColor="@color/pink"
        app:dsb_trackColor="#A0A0A0"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prog_bar"
        android:layout_marginTop="@dimen/dim_45"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ptsans_regular"
            android:gravity="center"
            android:text="SEARCH NOW"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_18"
            android:background="@drawable/rect_pink"
            android:gravity="center"
            android:text="SEARCH NOW"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_18"
            android:fontFamily="@font/ptsans_regular"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />
    </LinearLayout>
</RelativeLayout>