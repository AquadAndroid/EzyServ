<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ezyserv.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.ezyserv.MainActivity" />


            </FrameLayout>

            <ImageView
                android:id="@+id/_map_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/location" />

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10">

                <ImageButton
                    android:id="@+id/nav_drawer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/menu" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_toRightOf="@id/nav_drawer_btn"
                    android:background="@null"
                    android:drawablePadding="@dimen/dim_5"
                    android:drawableRight="@drawable/location_chevron"
                    android:padding="@dimen/dim_5"
                    android:shadowColor="@color/grey"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:text="YOUR LOCATION"
                    android:textColor="#ED365B"
                    android:textSize="@dimen/dim_16" />

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="?selectableItemBackground"
                    android:padding="@dimen/dim_5"
                    android:src="@drawable/search" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="-15dp">

                <FrameLayout
                    android:id="@+id/rl_floating_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:padding="@dimen/dim_10">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/all_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/all_cats"
                                app:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/all_category"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dim_20"
                                android:text="Handyman"
                                android:shadowColor="@color/grey"
                                android:shadowDx="-2"
                                android:shadowDy="-2"
                                android:shadowRadius="1"
                                android:textColor="@color/text_color_volet"
                                android:textSize="@dimen/dim_15" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:padding="@dimen/dim_10">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/domestic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/domestic"
                                app:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/domestic"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dim_20"
                                android:text="Domestic"
                                android:shadowColor="@color/grey"
                                android:shadowDx="-2"
                                android:shadowDy="-2"
                                android:shadowRadius="1"
                                android:textColor="@color/text_color_volet"
                                android:textSize="@dimen/dim_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dim_10">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/construction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:shadowColor="@color/black"
                                android:shadowDx="-2"
                                android:shadowDy="-2"
                                android:shadowRadius="1"
                                android:src="@drawable/construction"
                                app:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/construction"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dim_20"
                                android:text="My Care"
                                android:shadowColor="@color/grey"
                                android:shadowDx="-2"
                                android:shadowDy="-2"
                                android:shadowRadius="1"
                                android:textColor="@color/text_color_volet"
                                android:textSize="@dimen/dim_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dim_10">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/events"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/events"
                                app:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/events"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dim_20"
                                android:text="Events"
                                android:shadowColor="@color/grey"
                                android:shadowDx="-2"
                                android:shadowDy="-2"
                                android:shadowRadius="1"
                                android:textColor="@color/text_color_volet"
                                android:textSize="@dimen/dim_15" />
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_floating_btn"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    app:cardCornerRadius="@dimen/dim_2"
                    app:cardElevation="@dimen/dim_5">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:hint="Enter YOur Loction"
                        android:padding="@dimen/dim_10" />
                </android.support.v7.widget.CardView>


                    <!--<com.daprlabs.cardstack.SwipeFrameLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_above="@+id/card_book"
                        android:layout_height="@dimen/dim_200"
                        android:orientation="vertical">

                        <com.daprlabs.cardstack.SwipeDeck
                            android:id="@+id/swipe_deck"
                            swipedeck:card_gravity="bottom"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dim_20"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_70"
                            swipedeck:card_spacing="10dp"
                            android:paddingLeft="@dimen/dim_20"
                            android:paddingRight="@dimen/dim_20"
                            swipedeck:max_visible="3"
                            swipedeck:render_above="true"
                            swipedeck:rotation_degrees="15"
                            swipedeck:opacity_end="0.33"/>

                        &lt;!&ndash;<include layout="@layout/available_services" />&ndash;&gt;
                    </com.daprlabs.cardstack.SwipeFrameLayout>-->


                <android.support.v7.widget.CardView
                    android:id="@+id/card_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottom_nav_layout"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:background="@color/pink"
                    app:cardCornerRadius="@dimen/dim_2"
                    app:cardElevation="@dimen/dim_5">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/pink"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/wallet_cash_spiner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white" />

                        <View
                            android:layout_width="@dimen/dim_1"
                            android:layout_height="@dimen/dim_50"
                            android:background="@color/white" />

                        <TextView

                            android:id="@+id/tv_book_now"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:gravity="center"
                            android:hint="Enter YOur Loction"
                            android:padding="@dimen/dim_10"
                            android:text="BOOK NOW"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dim_18"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/bottom_nav_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <include layout="@layout/bottom"></include>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.ezyserv.fragment.FragmentDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dim_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handyman Services (72)"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16"
                android:gravity="center"
                android:id="@+id/tv_serv_catg"
                android:textStyle="bold"
                />
            <!--<GridView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:id="@+id/service_gridview"
                android:horizontalSpacing="@dimen/dim_5"
                android:numColumns="4"
                android:padding="@dimen/dim_5"
                android:stretchMode="columnWidth"
                android:verticalSpacing="4dp"
                tools:context="com.localfriend.fragments.AllFragment" />-->

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:id="@+id/bottom_sheet_recycler"
                />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>