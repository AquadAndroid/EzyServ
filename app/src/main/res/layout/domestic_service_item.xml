<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/service_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_10"
        android:background="@null"

        android:src="@drawable/ac_installation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_toRightOf="@+id/service_icon"
        android:text="AC Installation"
        android:id="@+id/service_name"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_18" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:layout_marginRight="@dimen/dim_10"
        android:background="@null"
        android:src="@drawable/view_details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:layout_below="@id/service_icon"
        android:layout_marginTop="@dimen/dim_8"
        android:background="#D8D8D8" />
</RelativeLayout>