<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezyserv.SucessfullLoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:id="@+id/succesfull_img"
        android:src="@drawable/successful" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/succesfull_img"
    android:textStyle="bold"
    android:id="@+id/label_sucessfull"
    android:textColor="@color/black"
    android:textSize="@dimen/dim_20"
    android:text="Log In successful !"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_sucessfull"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10"
        android:textSize="@dimen/dim_15"
        android:id="@+id/sucessfull_label"
        android:text="Taking you to Home"/>
</RelativeLayout>
