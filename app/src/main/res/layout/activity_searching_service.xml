<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3949AB"
    android:theme="@style/SplashTheme"
    tools:context="com.ezyserv.SearchingServiceActivity">

    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@null"
        app:rb_color="#FFFFFF"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_scale="6"
        app:theme="@style/SplashTheme">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/location" />

    </com.skyfishjy.library.RippleBackground>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:background="@null"
    android:gravity="center"
    android:text="Finding You an Electrical serviceman \n Please Wait....."
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/dim_18"
    android:layout_marginBottom="@dimen/dim_150" />
</RelativeLayout>
