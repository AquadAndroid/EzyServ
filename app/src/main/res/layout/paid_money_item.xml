<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_10">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile"
            android:layout_width="@dimen/dim_40"
            android:layout_height="@dimen/dim_40"
            android:layout_centerVertical="true"
            android:src="@drawable/markzuckerberg"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_toRightOf="@+id/img_profile"
            android:fontFamily="@font/ptsans_regular"
            android:text="Paid For Service electrical Repair"
            android:textSize="@dimen/dim_15" />

        <TextView
            android:id="@+id/tv_serviceman_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_toRightOf="@+id/img_profile"
            android:fontFamily="@font/ptsans_regular"
            android:text="Serviceman Name"
            android:textSize="@dimen/dim_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_60"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="@font/ptsans_regular"
        android:text="order ID #ES170623-234 "
        android:textSize="@dimen/dim_15" />

    <TextView
        android:id="@+id/tv_paid_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_60"
        android:layout_marginTop="@dimen/dim_10"
        android:fontFamily="@font/ptsans_bold"
        android:text="-SGD(S$)200"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_18" />

    <TextView
        android:id="@+id/tv_paid_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_60"
        android:layout_marginTop="@dimen/dim_5"
        android:fontFamily="@font/ptsans_regular"
        android:text="21 July 2017"
        android:textSize="@dimen/dim_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_10"
        android:background="#D8D8D8" />
</LinearLayout>