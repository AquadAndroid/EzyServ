<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/message_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_user"
            android:padding="10dp"
            android:textColor="@android:color/white"
            app:angle="8dp"
            app:arrowHeight="10dp"
            app:arrowLocation="left"
            app:arrowWidth="8dp"
            app:bubbleColor="@android:color/darker_gray" />

        <com.github.library.bubbleview.BubbleImageView
            android:id="@+id/message_content_media"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            app:arrowHeight="15dp"
            app:arrowLocation="left"
            app:arrowWidth="15dp" />

        <ImageButton
            android:id="@+id/imgActionAttachment"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>